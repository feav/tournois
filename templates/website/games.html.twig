    <link href="{{asset('assets/css/website/resultat.css')}}" rel="stylesheet" />
    <link href="{{asset('assets/css/website/finale.css')}}" rel="stylesheet" />

    <link rel="stylesheet" href="{{asset('assets/owlcarousel/assets/owl.carousel.min.css')}}">
