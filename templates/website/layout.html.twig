{% extends 'base.html.twig' %}
{% block title %} Tournoi de boule {% endblock %}

{% block stylesheets %}
    <link href="{{asset('assets/css/website/style.css')}}" rel="stylesheet" />
    <style type="text/css">

        @font-face {
            font-family: 'ds-digitalbold';
            src: url('{{asset('assets/fonts/ds-digib-webfont.woff2')}}') format('woff2'),
                 url('ds-digib-webfont.woff') format('woff');
            font-weight: normal;
            font-style: normal;
        }
        @font-face {
            font-family: 'ds-digitalregular';
            src: url('{{asset('assets/fonts/ds-digi-webfont.woff2')}}') format('woff2'),
                 url('ds-digi-webfont.woff') format('woff');
            font-weight: normal;
            font-style: normal;
        }
        @font-face {
            font-family: 'nunito-regular';
            src: url('{{asset('assets/fonts/nunito-regular-webfont.woff2')}}') format('woff2'),
                 url('{{asset('assets/fonts/nunito-regular-webfont.woff')}}') format('woff');
            font-weight: normal;
            font-style: normal;
        }
         @font-face {
            font-family: 'nunito-bold';
            src: url('{{asset('assets/fonts/nunito-bold-webfont.woff2')}}') format('woff2'),
                 url('{{asset('assets/fonts/nunito-bold-webfont.woff')}}') format('woff');
            font-weight: normal;
            font-style: normal;
        }
        body, *{
            font-family: ds-digitalbold;
        }
        .blablacar-logo{
            max-width: 100%;
            margin: auto;
            max-height: 82px;
        }
        #preloader {
            position: fixed;
            left: 0;
            top: 0;
            z-index: 999;
            width: 100%;
            height: 100%;
            overflow: visible;
            background: #fff url('{{asset('images/eclipse-loader.gif')}}') no-repeat center center;
        }
        h2.screen-title {
            text-align: center;
            margin-bottom: 31px;
        }

        /* owl carousel style */
        .owl-theme .owl-nav.disabled+.owl-dots{
            display: none;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="body-container">
        <header class="header">
            <div class="header-wrapper">
                <div class="blablacar-wrapper">
                    <img src="{{asset('images/logo/')}}{% block logo_compagnie %}{% endblock %}" class="blablacar-logo img-responsive" alt="logo entreprise">
                </div>
                <img src="{{asset('images/logo-boevent-small.png')}}" class="logo-v-mobile img-responsive" alt="logo compagnie">
                <div class="timer-wrapper">
                    <form name="chronoForm">
                        <h3 id="chronotime">00:00:00</h3>
                        <input type="button" name="startstop" value="start!" onClick="chronoStart()" style="display: none;" />
                        <input type="button" name="reset" value="reset!" onClick="chronoReset()" style="display: none;" />
                    </form>
                </div>
                <div class="logo-wrapper">
                    <div class="logo-wrapper-content">
                        <img src="{{asset('images/LOGO-BOEVENT.png')}}" class="logo" alt="notre logo">
                    </div>
                </div>
            </div>
        </header>
        <main class="main">
            <div class="pop-end-tournoi animated slideInDown" style="display: none;">CE TOURNOI EST TERMINE</div>
            <div class="middle-container">
                <div class="middle-content">
                    {% block page %} {% endblock %}
                </div>
            </div>
        </main>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{asset('assets/angular-lib/angular.js') }}" type="text/javascript"></script>
    <script src="{{asset('assets/angular-lib/angular-resource.js') }}" type="text/javascript"></script>
    <script src="{{asset('assets/angular-lib/angular-route.js') }}" type="text/javascript"></script>
    <script src="{{asset('assets/angular-lib/angular-ui-router.js') }}" type="text/javascript"></script>
    <script src="{{asset('assets/angular-lib/underscore.js') }}" type="text/javascript"></script>
    <script src="{{asset('assets/angular-lib/ui-bootstrap-tpls.min.js') }}" type="text/javascript"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-sanitize.js"></script>
    {#<script type="text/javascript" src="{{('assets/js/timmer.js')}}"></script>#}
    <script type="text/javascript">
        window.addEventListener("load",function(){
          $('#preloader').fadeOut('slow',function(){$(this).remove();}); 
        });
    </script>
{% endblock %}
