
<h2 class="form-head">Ajout d'un type de tournois</h2>
<form id="formTypeTournoi" name="formTypeTournoi">
    <div class="row">
     	<div class="col-sm-6 form-control">
     		<input type="text" name="tata">
     	</div>
     	<div class="col-sm-6 form-control">
     		<input type="text" name="toto">
     	</div>
    </div> 
    <button class="submit">Enregistrer</button>
</form>
<script type="text/javascript">

	$(document).ready(function(){
		var form = document.forms.namedItem("formTypeTournoi");
		form.addEventListener('submit', function(ev) {
			$.ajax({
		        url:$('body').data('base-url')+"admin/type-tournoi/add/5",
		        type:"POST",
		        data:$('#formTypeTournoi').serialize(),
		        success:function(response) {

		        	$('#formTypeTournoi')[0].reset();
		        },
		        error:function(){
		        	alert("error");
			    }
		   	});
				
			ev.preventDefault();
		}, false);
	});

