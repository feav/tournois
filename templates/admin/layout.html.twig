{% extends 'base.html.twig' %}
{% block title %} Administration - Tournoi {% endblock %}
{% block stylesheets %}
    <link href="{{asset('assets/css/light-bootstrap-dashboard.css')}} " rel="stylesheet" />
    <link href="{{asset('assets/css/demo.css')}}" rel="stylesheet" />
    <style type="text/css">
        .add-tournoi{display: none;}
        form label.error {
            color: #ce0a0a;
            font-style: italic;
            font-size: 14px;
        }
        img.bo-logo-boevent{
            height: 40px;
            max-width: 100%;
        }
        .sidebar::after, body > .navbar-collapse::after{
            background-image: linear-gradient(to bottom, #06103a 0%, #06103a 100%);
        }
        .add-tournoi:hover, .add-tournoi:active, .add-tournoi:focus{
            color: #fff;
         }
        .add-tournoi {
            background: #1DC7EA;
            color: #fff;
            padding: 12px 14px;
            border-radius: 4px;
            font-size: 16px;
            box-shadow: -3px 1px 5px #a6a6a6;
        }
    </style>
{% endblock %}

